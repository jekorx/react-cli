.logo
  height 100%
  animation logo-spin infinite 20s linear
.header
  height 90px !important
  box-shadow 0 0 10px rgba(0,0,0,.25)
  position relative
  z-index 101
  box-sizing border-box
  &-icon
    font-size 40px
  &-title
    font-size 38px
    max-width 52vw
    box-shadow border-box
    padding-right 60px
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
.content
  height calc(100% - 90px)
  position relative
.menu
  background-color #FFF
  height 100vh
  width 50vw
  margin 0
  padding 90px 0 0 0
  box-sizing border-box
  list-style none
.login
  padding 30px 0
  text-align center
  &-icon
    font-size 70px
    color #1890ff
  &-text
    padding 0 20px
    font-size 38px
    color #000
    vertical-align middle
.divider
  border-top 1px solid #DDD
.link
  padding 30px 0
  display block
  color #000
  background-color #FFF
  text-align center
  font-size 32px
  &-icon
    display inline-block
    width 100px
    font-size 32px
  &-title
    font-size 32px
    padding-right 40px
    vertical-align middle
.indicator
  font-size 26px
@keyframes logo-spin
  0%
    transform rotate(0deg)
  10%
    transform rotate(60deg)
  20%
    transform rotate(40deg)
  30%
    transform rotate(120deg)
  40%
    transform rotate(100deg)
  50%
    transform rotate(180deg)
  60%
    transform rotate(160deg)
  70%
    transform rotate(240deg)
  80%
    transform rotate(220deg)
  90%
    transform rotate(280deg)
  100%
    transform rotate(360deg)
