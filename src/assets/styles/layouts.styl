.logo
  height 100%
  animation logo-spin infinite 20s linear
.ignore-
  &content
   height calc(100%-45px)
   padding-top 45px
  &header
    position fixed
    width 100%
    z-index 101
    box-shadow 0 0 4px rgba(0,0,0,.25)
  &menu
    background-color #FFF
    height 100%
    width 200px
    margin 0
    padding 45px 0 0 0
    box-sizing border-box
    list-style none
  &link
    padding 12px 16px
    display block
    font-size 14px
    color #000
    text-align center
  &icon
    display inline-block
    width 60px
  &title
    padding-right 40px
  &divider
    border-top 1px solid #DDD
  &user
    width 100%
    text-align center
    margin 0
    padding 10px 0 16px
    font-size 16px
  &avatar
    width 30%
    height 30%
    border 2px solid #AAA
    border-radius 100%
    margin-bottom 10px
  &login
    padding 20px
    text-align center
  &text
    padding 0 20px
    font-size 18px
    color #000
    vertical-align middle
@keyframes logo-spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)
