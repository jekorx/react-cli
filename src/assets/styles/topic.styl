.topic
  padding 0 20px
  position relative
  height 100%
  width 750px
  box-sizing border-box
  border-bottom 1px solid #EEE
.title
  padding 10px
  margin 20px 0
  font-size 36px
  color #2c3e50
  line-height 1.5
  background-color #f0f0f0
  border-radius 6px
.info
  display flex
  padding 20px 0 100px
  align-items center
.avatar
  display inline-block
  width 90px
  height 90px
  border-radius 50%
  background-size cover
  background-color #EEE
  margin-right 20px
.center
  display flex
  flex-direction column
  justify-content space-around
  flex 1 1 auto
.collect
  font-size 28px !important
  display inline !important
  padding 10px 20px !important
  &-wrap
    text-align right
    width 160px
.tag
  padding 8px 20px
  border-radius 8px
  font-size 26px
  &-author
    color #fff
    background-color #80bd01
    font-size 26px
    padding 6px 8px
    margin-left 8px
    border-radius 6px
  &-wrap
    margin-bottom 10px
    text-align right
.reply
  padding 0 20px
  border-bottom 1px solid #EEE
  width 750px
  box-sizing border-box
  &-header
    margin 40px -20px 0
    padding 20px
    border-top 1px solid #EEE
    display flex
    align-items center
    justify-content space-between
  &-count
    color #1890ff
    margin 0 10px
  &-info
    flex 1
    display flex
    align-items center
  &-name
    padding-right 6px
  &-left
    flex 1
    font-size 26px
  &-right
    display flex
    align-items center
  &-add
    float right
.anchor
  color #1890ff
  margin-left 6px
.user
  display flex
  padding 30px 0
.up-count
  padding-left 10px
  padding-right 20px
  font-size 26px
.comment
  margin 0 -20px
  border-top 1px solid #EEE
.textarea
  width 100%
  height 300px
  box-sizing border-box
  resize none
  border none
  border-bottom 1px solid #EEE
.btns
  text-align right
.btn
  margin 20px
