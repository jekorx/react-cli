.tag
  background-color #e5e5e5
  padding 6px 8px
  font-size 26px
  border-radius 6px
  color #999
.tab-hightlight
  color #fff
  background-color #80bd01
.back-top
  position fixed
  bottom 30px
  right 30px
  opacity .8
  &-icon
    color #1890ff
    font-size 100px
.loading
.error
  height 100%
  width 100%
  background-position 50% 36vw
  background-repeat no-repeat
  background-size 36vw 36vw
.loading
  background-image url(../images/loading.gif)
.error
  background-image url(../images/error.png)
